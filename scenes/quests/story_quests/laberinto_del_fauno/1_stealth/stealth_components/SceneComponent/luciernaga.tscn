script/source = "extends PointLight2D

var MIN_SCALE: float = randf_range(0.3,1.0)  
var MAX_SCALE: float = randf_range(MIN_SCALE,2.5)  
var PULSE_SPEED: float = 2.0 


func _process(_delta: float) -> void:
	var time_in_seconds: float = Time.get_ticks_msec() / 1000.0
	
	var sin_wave: float = sin(time_in_seconds * PULSE_SPEED)
	
	var normalized_pulse: float = (sin_wave + 1.0) / 2.0 
	
	var current_scale: float = lerp(MIN_SCALE, MAX_SCALE, normalized_pulse)
	
	self.texture_scale = current_scale
"

