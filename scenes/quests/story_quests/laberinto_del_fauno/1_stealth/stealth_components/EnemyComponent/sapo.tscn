script/source = "@tool
extends CharacterBody2D

@export var lodo: PackedScene
@export var player: CharacterBody2D 
@export var SpriteFrame: SpriteFrames = preload(\"res://scenes/quests/story_quests/laberinto_del_fauno/1_stealth/stealth_components/EnemyComponent/laberinto_del_fauno_SapoGreen_enemy.tres\")
var is_firing_sequence: bool = false 

func _ready() -> void:
	$Sprite.sprite_frames = SpriteFrame

func disparar_un_lodo() -> void:
	if player == null:
		return

	var lodo_instance:CharacterBody2D = lodo.instantiate()
	lodo_instance.global_position = $Marker.global_position 

	lodo_instance.start_move(player.global_position) 

	get_parent().add_child(lodo_instance)

func _on_timer_timeout() -> void:
	$Sprite.play(\"Attack\") 

func _on_sprite_frame_changed() -> void:
	if $Sprite.frame == 2 or $Sprite.frame == 4:
		disparar_un_lodo() 


func _on_sprite_animation_finished() -> void:
	await get_tree().create_timer(0.5).timeout
	$Sprite.play(\"default\") 
